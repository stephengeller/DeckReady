{
  "name": "deckready",
  "description": "Turn Spotify or Qobuz links into clean, tagged AIFFs, organised for DJs.",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "scripts": {
    "setup": "script/setup",
    "typecheck": "tsc --noEmit",
    "start": "ts-node src/cli/runLucky.ts",
    "not-matched:spotify": "ts-node src/cli/notMatchedToSpotify.ts",
    "test": "jest --runInBand --reporters=default",
    "lint": "eslint --config .eslintrc.cjs --ext .ts src test",
    "lint:fix": "eslint --config .eslintrc.cjs --ext .ts src test --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "husky:init": "husky"
  },
  "bin": {
    "run-lucky": "script/run-lucky",
    "spotify-list": "script/spotify-list",
    "tidal-list": "script/tidal-list",
    "qobuz-dl-url": "script/qobuz-dl-url",
    "deckready": "script/run"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --config .eslintrc.cjs --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
